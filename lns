# Set up symbolic links to utilities
# Set the 'build' directory to the current branch name
#
cd /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production
BRANCH_NAME=`git status | grep "On branch" | awk '{print $3}'`
echo $BRANCH_NAME
rm -f build
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME build
cd ~/bin
rm -f gaiac
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/catalog/gaiac/gaiac gaiac
rm -f flatc
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/flatbuffers/flatc flatc
rm -f gaia_generate
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/tools/gaia_generate/gaia_generate gaia_generate
rm -f test_direct_access
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/direct_access/test_direct_access test_direct_access
rm -f test_references
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/direct_access/test_references test_references
rm -f test_gaia_generate
ln -s /home/wayne/src/github.com/gaia-platform/GaiaPlatform/production/$BRANCH_NAME/tools/gaia_generate/test_gaia_generate test_gaia_generate

